<?xml version='1.0' encoding='utf-8'?>
<widget id="me.goweiwen.pear" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pear</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="goweiwen@gmail.com" href="https://pear.netlify.com">
        Pear
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleInstance" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="BackgroundColor" value="0xfffee591" />
        <preference name="SplashScreenBackgroundColor" value="0xfffee591" />
        <preference name="StatusBarBackgroundColor" value="0xffe4ce82" />
        <preference name="StatusBarStyle" value="default" />
        <preference name="Orientation" value="portrait" />
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
        <preference name="BackgroundColor" value="0xfffee591" />
        <preference name="SplashScreenBackgroundColor" value="0xfffee591" />
        <preference name="StatusBarBackgroundColor" value="0xfffee591" />
        <preference name="StatusBarStyle" value="default" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="Orientation" value="portrait" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <universal-links>
        <host name="pear.netlify.com" scheme="https" />
    </universal-links>
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="git+https://github.com/apache/cordova-ios.git" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-facebook4" spec="^1.9.1">
        <variable name="APP_ID" value="2012482058985830" />
        <variable name="APP_NAME" value="Pear" />
    </plugin>
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.1" />
    <plugin name="cordova-plugin-fcm" spec="~2.1.2" />
    <plugin name="cordova-plugin-local-notifications" spec="git+https://github.com/katzer/cordova-plugin-local-notifications.git" />
    <plugin name="cordova-universal-links-plugin" spec="git+https://github.com/martindrapeau/cordova-universal-links-plugin.git#22225179a5debfcff801e306eb1bf5477200aeda" />
    <plugin name="cordova-plugin-statusbar" spec="git+https://github.com/apache/cordova-plugin-statusbar.git" />
</widget>
